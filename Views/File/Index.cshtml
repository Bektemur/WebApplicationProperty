@using WebApplicationProperty.Models
@using WebApplicationProperty.ViewModel
@model IndexViewModel
@{
    ViewData["Title"] = "Index";

}
<h2>List property images</h2>
<br />
<p><a asp-area="" asp-controller="File" asp-action="Create" class="btn btn-primary float-left">Create</a></p>
<br />
<div class="container">
    <div class="row">
    <table class="table table-bordered table-striped">
            <tr><td>
    <div class="col-md-10">
            @{int count = 0; }
        @foreach (var item in Model.ListProperty)
        {
            
            <div class="card mb-1">
                <div class="row no-gutters">
                    <div class="col-sm-3 text-center">
                        <div id="carouselExampleControls-@count" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100 h-75" src="~/@item.FileSystemModels.Select(v=>v.FilePath).FirstOrDefault()">
                                </div>
                                @foreach (var image in item.FileSystemModels)
                                {


                                    <div class="carousel-item">
                                        <img src="~/@image.FilePath" alt="@image.Name" class="d-block w-100 h-75" />
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls-@count" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls-@count" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.FileSystemModels.Count images</p>
                            <p class="card-text"><small class="text-muted"></small></p>
                            <p class="card-text float-right" style="background-color:silver; margin-top:-50px"> @item.Price THB</p>
                            <a asp-area="" asp-controller="File" asp-action="Edit" asp-route-id="@item.PropertyId" class="btn btn-warning float-right">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
            count++;
        }
    </div>
</td>
            </tr></table>
    </div>
</div>