@model IEnumerable<WebApplicationProperty.Models.Property>

@{
    ViewData["Title"] = "List of Properties";
}

<h3>@ViewData["Title"]</h3>
<table>

    <tr>
        <td><a class="btn btn-info" asp-controller="Projects" asp-action="Index">Projects</a></td>
        <td><a class="btn btn-info" asp-controller="Stations" asp-action="Index">Stations</a></td>
        <td><a class="btn btn-info" asp-controller="TypeProperties" asp-action="Index">Type properties</a></td>
    </tr>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceSaleSqm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LivingArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bathrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceSaleSqm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LivingArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LandArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bathrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bedrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PropertyId" class="btn btn-warning">Edit</a> |
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.PropertyId" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PropertyId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
