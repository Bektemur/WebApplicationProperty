@model IEnumerable<WebApplicationProperty.Models.Property>

@{
    ViewData["Title"] = "List of Properties";
}

<h3>@ViewData["Title"]</h3>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price_sqm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Living_area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Land_area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bathrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Public_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Update_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProperties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price_sqm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Living_area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Land_area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bathrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bedrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Public_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Update_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProperties.TypePropertyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Station.StationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PropertyId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PropertyId" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PropertyId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
