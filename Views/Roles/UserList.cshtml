@model List<WebApplicationProperty.Data.ApplicationUser>

<div class="d-inline-flex">
    <h2>Users list </h2>
</div>
<br />
<table class="table table-striped table-bordered">
    <tr>
        <th>LastName</th>
        <th>FirstName</th>
        <th>PhoneNumber</th>
        <th>UserName</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr id="user-@user.Id">
            <td>
                @user.LastName
            </td>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.PhoneNumber
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                @user.Email
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Edit roles</a>
                <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-userid="@user.Id">Delete User</a>
            </td>
        </tr>
    }
</table>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="?skip=0&take=10">1</a></li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>
<div class="d-inline-flex">
    <form asp-action="Export" asp-controller="Roles" method="post" class="mr-2">
        <button type="submit" class="btn btn-success">Export</button>
    </form>
    <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-primary">Back to Roles list</a>
</div>