@model List<WebApplicationProperty.Data.ApplicationUser>

<h2>Users list</h2>
<table class="table table-striped table-bordered">
    <tr>
        <th>LastName</th>
        <th>FirstName</th>
        <th>PhoneNumber</th>
        <th>UserName</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr id="user-@user.Id">
             <td>
                @user.LastName
            </td>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.PhoneNumber
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                @user.Email
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Edit roles</a>
                <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-userid="@user.Id">Delete User</a>
            </td>
        </tr>
    }
</table>
    @using (Html.BeginForm("Export", "Roles", FormMethod.Post))
    {
        <input type="submit" class="btn btn-sm btn-success" id="btnSubmit" value="Export"/>
    }