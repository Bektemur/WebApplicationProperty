@using WebApplicationProperty.Data;
@model List<ApplicationRole>

<h2>Roles list</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr id="role-@role.Id">
            <td>@role.Name</td>
            <td>@role.Description</td>
            <td>@role.CreatedDate</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-primary">Add Role</a>
<a asp-action="UserList" class="btn btn-primary">Users list</a>