@using WebApplicationProperty.Data;
@model List<ApplicationRole>

<h2>Roles list</h2>
<div>
    <a asp-action="Create" class="btn btn-primary">Add Role</a>
    <a asp-action="UserList" class="btn btn-outline-success">Users list</a>
</div>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Role Name</td>
            <td>Description</td>
            <td>CreatedDate</td>
            <td>Actions</td>
        </tr>
    </thead>
    @foreach (var role in Model)
    {
        <tr id="role-@role.Id">
            <td>@role.Name</td>
            <td>@role.Description</td>
            <td>@role.CreatedDate</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="?skip=0&take=10">1</a></li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>